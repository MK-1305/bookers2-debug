<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
				<%= render 'users/profile', user: @user %>
				<p>
					<li>
						フォロー数　<%= link_to @user.followings.count, follows_path(@user) %>
					</li>
					<li>
						フォロワー数　<%= link_to @user.followers.count, followers_path(@user) %>
					</li>
			    </p>
				<%= render 'users/follow_button', user: @user %>
			<!--同コントローラーのviewで表示ならusersは省略可 -->

			<h2>New book</h2>
				<%= render 'books/newform', book: @book %>
		</div>

			<div class="col-xs-9">
			<%= render 'layouts/search' %>
			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
	<!--books一覧 -->

		</div>
	</div>
</div>

